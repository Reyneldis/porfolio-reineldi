---
// src/components/ThemeToggle.astro
interface Props {
  uniqueId?: string;
}

const { uniqueId = 'theme-toggle' } = Astro.props;
---

<!-- El botón ahora es solo HTML. No hay script aquí. -->
<button
  id={uniqueId}
  class="relative flex items-center justify-center w-8 h-8 transition-colors rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 focus:outline-none"
  aria-label="Cambiar tema"
  type="button"
>
  <!-- Ícono de Sol (visible en modo oscuro) -->
  <svg
    class="absolute w-5 h-5 text-yellow-500 transition-all duration-300 scale-0 opacity-0 dark:scale-100 dark:opacity-100"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      fill-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      clip-rule="evenodd"></path>
  </svg>
  <!-- Ícono de Luna (visible en modo claro) -->
  <svg
    class="w-5 h-5 transition-all duration-300 dark:scale-0 dark:opacity-0 text-slate-700 dark:text-slate-300"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
    ></path>
  </svg>
</button>
